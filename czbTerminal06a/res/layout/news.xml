<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:background="@drawable/img_bg"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:addStatesFromChildren="true"
		android:background="@drawable/up_button" android:gravity="top"
		android:paddingLeft="15dip"
		android:paddingRight="15dip">

		<ImageButton android:id="@+id/lastpageid" 
			android:layout_width="wrap_content"  android:visibility="invisible"
			android:layout_height="wrap_content" android:layout_gravity="center_vertical"
			android:src="@drawable/state_lastpage" android:background="#00000000" />


		<TextView android:id="@+id/titleView" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="26dip"
			android:layout_weight="1" android:textColor="#FFFFFF" android:text="移 动 资 讯"
			android:layout_gravity="center" android:gravity="center" />
			
		<ImageButton android:id="@+id/nextpageid"
			android:layout_width="wrap_content" android:visibility="invisible"
			android:layout_height="wrap_content" android:layout_gravity="center_vertical"
			android:src="@drawable/state_nextpage" android:background="#00000000" />

	</LinearLayout>

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="45dip" android:addStatesFromChildren="true"
		android:background="@drawable/itmage" android:gravity="center_horizontal">

		<ImageButton android:id="@+id/page_compnew"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:src="@drawable/new_compnew" android:background="#00000000"
			android:layout_marginLeft="5dip" android:layout_marginTop="5dip"
			android:visibility="visible" />

		<ImageButton android:id="@+id/page_lastnew"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:src="@drawable/new_lastnew" android:background="#00000000"
			android:layout_marginTop="5dip"
			android:visibility="visible" />

		<ImageButton android:id="@+id/page_prodnew"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:src="@drawable/new_productnew" android:background="#00000000"
			android:layout_marginTop="5dip" 
			android:visibility="visible"/>

		<ImageButton android:id="@+id/page_distnew"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:src="@drawable/new_distnew" android:background="#00000000"
			android:layout_marginTop="5dip" 
			android:visibility="visible"/>

	</LinearLayout>

<WebView  
	android:id="@+id/news_web"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:layout_weight="1"
    />

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:gravity="center"
		android:layout_height="50dip"
		android:background="@drawable/grid_bottom">

		<ImageButton android:id="@+id/page_main"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical" android:layout_weight="1"
			android:src="@drawable/state_pagemain" android:scaleType="fitCenter"
			android:background="#00000000" android:layout_marginLeft="5dip" />

		<ImageButton android:id="@+id/webUpdate"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical" android:layout_weight="1"
			android:src="@drawable/state_pageupdate"
			android:scaleType="fitCenter" android:background="#00000000" />

		<ImageButton android:id="@+id/page_last"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical" android:layout_weight="1"
			android:src="@drawable/state_pagelast" android:scaleType="fitCenter"
			android:background="#00000000" />

		<ImageButton android:id="@+id/page_next"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical" android:layout_weight="1"
			android:src="@drawable/state_pagenext" android:scaleType="fitCenter"
			android:background="#00000000" />

		<ImageButton android:id="@+id/page_more"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical" android:layout_weight="1"
			android:src="@drawable/state_pagemeun" android:scaleType="fitCenter"
			android:background="#00000000" />

		<ImageButton android:id="@+id/page_exit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical" android:layout_weight="1"
			android:src="@drawable/state_pageexit" android:scaleType="fitCenter"
			android:background="#00000000" />


	</LinearLayout>

</LinearLayout>
