<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:background="@drawable/img_bg"
	android:layout_width="fill_parent" android:layout_height="fill_parent">

	<ImageView android:background="@drawable/img_title"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_gravity="center_vertical" />


	<FrameLayout android:layout_height="35dip"
		android:layout_width="fill_parent" android:background="#4F4F4F">

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="35dip" android:addStatesFromChildren="true"
			android:paddingLeft="15dip">

			<ImageView android:id="@+id/downtitle" android:background="@drawable/disk"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginTop="5dip" />

			<TextView android:id="@+id/centerpage" android:textSize="15dip"
				android:layout_width="57dip" android:layout_height="wrap_content"
				android:layout_marginTop="7dip" android:layout_marginLeft="20dip"
				android:text="已下载 (" />

			<TextView android:id="@+id/allpage" android:text="0 )"
				android:layout_width="40dip" android:layout_height="wrap_content"
				android:layout_marginTop="7dip" />


			<!--<ImageView android:id="@+id/changeImage" android:background="@drawable/pull" 
				android:layout_gravity="center_vertical" android:layout_width="wrap_content" 
				android:layout_height="wrap_content" android:layout_marginLeft="110dip" /> -->
		</LinearLayout>

		<!--<Button android:id="@+id/pushPull" android:layout_width="fill_parent" 
			android:layout_height="35dip" android:background="#00000000"> </Button> -->
	</FrameLayout>



	<ListView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_weight="1"
		android:background="#272727" android:id="@+id/ListView">
	</ListView>


	<RelativeLayout android:layout_width="fill_parent" 
		android:layout_height="wrap_content" android:background="@drawable/grid_bottom" 
		android:paddingTop="10dip">


		<ImageButton android:id="@+id/delete" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentLeft="true"
			android:src="@drawable/state_filedelete" android:layout_marginLeft="25dip"
			android:scaleType="fitCenter" android:background="#00000000" />

		<ImageButton android:id="@+id/returns" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentRight="true" 
			android:src="@drawable/state_filedreturn" android:layout_marginRight="25dip" 
			android:scaleType="fitCenter" android:background="#00000000" />

	</RelativeLayout>

</LinearLayout>
